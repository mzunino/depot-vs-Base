
<%
	es_modal = !@modo_listado.nil?   
%>

<style>
	
			#contenedor_template{
				<% if (es_modal) %>				
					  height:auto;
  					  max-height: 400px;
				<% else %>
					height: 600px;
				<% end %>
				overflow: auto;
				border-style:solid;
				border-width:1px;
		        border-radius: 5px;
		        -moz-border-radius: 5px;
		        margin-bottom: 2em;
		        margin-right: 1em;
		        border-color: #aaa;
		        background-color: rgba(282, 282, 282, 0.7);
		        font: small sans-serif
		        padding: 5px;
			}

			#contenedor_template {
				width: 100%;
				height:200px;
			}
				
			#contenedor_template div {
				float: left;
				border-style:solid;
				border-width:1px;
			}
			
			#titulo-noticia{
				clear:both;	
			}
		    #div_template_1 {
		    		float: left;
	  width: 175px;
  float: left;
  padding: 5px;
  border: 0px;
		    }

		    #div_template_2 {
		    		float: left;
					width: 10%;
					height:100%
		    }

</style>

<div id="contenedor_template">
        <div id="titulo-noticia">
        		<% if !@noticia.nil? %>
                	<%= @noticia.descripcion %>
				<% end %>
        </div>
		<br />
        <hr />
		
		<%= mostrarElemento(@hash_elementos_renderizados, 1,0) %>
		<%= mostrarElemento(@hash_elementos_renderizados, 2,0) %>
		
        <hr />

		<% if(!es_modal) %>
            <input type="button" id="button" value="Mostrar Ventana" onClick='mostrarModal("<%=@contenido_modal%>")'/>
        
		<% end %>

</div>


